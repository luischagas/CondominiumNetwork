@using CondominiumNetwork.WebApp.Extensions
@model IEnumerable<CondominiumNetwork.WebApp.ViewModels.WarningViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1>Warnings</h1>

<p supress-by-claim-name="Warning" supress-by-claim-value="Add">
    <a class="btn btn-info" asp-action="Create">New Warning</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PublishDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                    <a class="btn btn-warning" supress-by-claim-name="Warning" supress-by-claim-value="Edit" asp-action="Edit" asp-route-id="@item.Id" ><span class="fa fa-pencil-alt"></span></a>
                    <a class="btn btn-danger" supress-by-claim-name="Warning" supress-by-claim-value="Edit" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model CondominiumNetwork.WebApp.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ProfileViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input asp-for="Birthday" asp-format="{0:dd/MM/yyyy}"  class="form-control" />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BlockApartment" class="control-label"></label>
                <input asp-for="BlockApartment" class="form-control" />
                <span asp-validation-for="BlockApartment" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <input type="hidden" name="PhotoUrl" />
                    <label asp-for="PhotoUrl" class="control-label"></label>
                    <input type="file" name="photoFile" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<CondominiumNetwork.Infrastructure.DataAcess.Context.Model.DbCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<p>
    <a class="btn btn-info" asp-action="Create">New Category</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Category.ToString()
            </td>
            <td class="text-right">
                <a class="btn btn-info"><span class="fa fa-search"></span></a>
                <a class="btn btn-warning"><span class="fa fa-pencil-alt"></span></a>
                <a class="btn btn-danger"><span class="fa fa-trash"></span></a>
            </td>
        </tr>
        }
    </tbody>
</table>
